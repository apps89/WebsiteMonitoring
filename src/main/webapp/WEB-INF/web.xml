<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"
         metadata-complete="true">


  
  <servlet>
    <servlet-name>MainServlet</servlet-name>
    <servlet-class>Controller.MainServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MainServlet</servlet-name>
    <url-pattern>/mainUrlsTable</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>StartMonitorServlet</servlet-name>
    <servlet-class>Controller.StartMonitorServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>StartMonitorServlet</servlet-name>
    <url-pattern>/monitoringTable</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AddNewLinkServlet</servlet-name>
    <servlet-class>Controller.AddNewLinkServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddNewLinkServlet</servlet-name>
    <url-pattern>/addNewLink</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>EditorPageServlet</servlet-name>
    <servlet-class>Controller.EditorPageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EditorPageServlet</servlet-name>
    <url-pattern>/editorPage</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>EditorServlet</servlet-name>
    <servlet-class>Controller.EditorServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EditorServlet</servlet-name>
    <url-pattern>/updater</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>RemoveLinkServlet</servlet-name>
    <servlet-class>Controller.RemoveLinkServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RemoveLinkServlet</servlet-name>
    <url-pattern>/remover</url-pattern>
  </servlet-mapping>


</web-app>
